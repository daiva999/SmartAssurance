<client_script><![CDATA[function getProductList() {
    window.location.href = "https://ven06798.service-now.com/ui_page.do?sys_id=2ea5107247c6751055784a02516d43af";
}

var familyContainer = document.querySelector(".white-container");
var familyCount = {
    Self: 0,
    Spouse: 0,
    Father: 0,
    Mother: 0,
    Son: 0,
    Daughter: 0,
    "Father-in-law": 0,
    "Mother-in-law": 0,
};

var maxIncrements = {
    Self: 1,
    Spouse: 1,
    Father: 1,
    Mother: 1,
    Son: 2,
    Daughter: 2,
    "Father-in-law": 1,
    "Mother-in-law": 1,
};

var incrementButtons = document.querySelectorAll(".increment");
var decrementButtons = document.querySelectorAll(".decrement");
var countElements = document.querySelectorAll(".count");

incrementButtons.forEach(function (button, index) {
    button.addEventListener("click", function () {
        var familyMember = Object.keys(familyCount)[index];
        if (familyCount[familyMember] < maxIncrements[familyMember]) {
            familyCount[familyMember]++;
            countElements[index].textContent = familyCount[familyMember];
            addFamilyMember(familyMember);
        }
    });
});

decrementButtons.forEach(function (button, index) {
    button.addEventListener("click", function () {
        var familyMember = Object.keys(familyCount)[index];
        if (familyCount[familyMember] > 0) {
            familyCount[familyMember]--;
            countElements[index].textContent = familyCount[familyMember];
            removeFamilyMember(familyMember);
        }
    });
});

function addFamilyMember(memberType) {
    var familyDiv = document.createElement("div");
    familyDiv.className = "family-container";
    familyDiv.id = memberType; // Add an ID to uniquely identify the family member
    familyDiv.innerHTML =
        '<div class="relation">' + memberType + '</div>' +
        '<div class="data">' +
        '<div class="inputType">Name</div>' +
        '<input type="text" placeholder="enter name" class="inputData">' +
        '<div class="inputType">Age</div>' +
        '<input type="number" placeholder="enter age" class="inputData">' +
        '</div>';
    familyContainer.appendChild(familyDiv);
}

function removeFamilyMember(memberType) {
    var familyDiv = document.getElementById(memberType);
    if (familyDiv) {
        familyContainer.removeChild(familyDiv);
    }
}
]]></client_script>
